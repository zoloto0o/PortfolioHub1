@model PortfolioHub.ViewModels.WorkCreateViewModel
@{
    ViewData["Title"] = "Создать работу";
}

<h2>Создать работу</h2>

<form method="post" enctype="multipart/form-data">
    @Html.AntiForgeryToken()

    <div class="mb-3">
        <label class="form-label">Название</label>
        <input class="form-control" asp-for="Title" />
        <span class="text-danger" asp-validation-for="Title"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Описание</label>
        <textarea class="form-control" asp-for="Description" rows="5"></textarea>
        <span class="text-danger" asp-validation-for="Description"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Видимость</label>
        <select class="form-select"
                asp-for="Visibility"
                asp-items="Html.GetEnumSelectList<PortfolioHub.Models.Visibility>()">
        </select>
    </div>

    <div class="form-check mb-3">
        <input class="form-check-input" asp-for="IsPinned" />
        <label class="form-check-label" asp-for="IsPinned">Закрепить</label>
    </div>

    <div class="mb-3">
        <label class="form-label">Изображения (до 5)</label>
        <input class="form-control"
               type="file"
               asp-for="Images"
               multiple
               accept=".jpg,.jpeg,.png,.webp" />
        <div class="form-text">Поддерживаются: JPG, PNG, WEBP. Максимум 5 файлов.</div>
    </div>

    <div class="text-danger mb-2" asp-validation-summary="All"></div>

    <button class="btn btn-primary" type="submit">Сохранить</button>
    <a class="btn btn-secondary" href="/works">Отмена</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
